@page "/Testing"
@rendermode InteractiveServer

@using MinecraftHypixel.Components.Pages
@using MinecraftHypixel.Components.Pages.Common
@using MinecraftHypixel.Models

<h3>Index</h3>

<button @onclick="ShowPopup">Show Popup</button>
<button @onclick="ShowForm">Show Form</button>

<Popup @ref="_popupRef" />
<GenericTable T="Item" @ref="_genericFormRef"/>
@code {
    private Popup _popupRef=new Popup();
    private GenericTable<Item> _genericFormRef = new GenericTable<Item>();


    private void ShowPopup()
    {
        _popupRef.Show("Popup body text","Header");
    }
    private void ShowForm()
    {
        List<Item> list = new List<Item>();
        list.Add(new Item(){Id="Aleluya",Name="Works"});
        list.Add(new Item() { Id = "Aleluya", Name = "Works" });
        list.Add(new Item() { Id = "Aleluya", Name = "Works" });

        _genericFormRef.Show(list);
    }

}
