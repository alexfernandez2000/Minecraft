@typeparam T

@{
    var _showClass = IsVisible ? "d-grid" : "d-none";
}
@if(IsVisible)
{
    <div class="popup bal @_showClass" data-bs-autohide="true" data-bs-delay="5000">
        <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto">Generic Form</strong>
                <button type="button" class="btn-close" aria-label="Close" @onclick="Close"></button>
            </div>

            <div class="toast-body">
                <h1>Body</h1>
                @foreach (var item in _objectList!.GetType().GetProperties().Select(x => x.Name).ToList())
                {
                    <th>@item</th>
                }
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public EventCallback<bool> IsVisibleChanged { get; set; }

    private List<T>? _objectList;
    public void Show(List<T> ObjectList)
    {
        _objectList = ObjectList;
        IsVisible = true;
        StateHasChanged();
    }

    private void Close()
    {
        IsVisible = false;
        StateHasChanged();
    }
}
<style>
    .popup {
        place-items: center;
        height: 100%;
        width: 100%;
        top: 0;
        left: 0;
        text-align: center;
        background-color: rgba(0,0,0,0.5);
        position: fixed;
    }
</style>